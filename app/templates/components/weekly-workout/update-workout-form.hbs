<h5>Update workout</h5>
<form {{action 'updateWorkout' on='submit'}}>
  <div class='workout-form'>
    {{input placeholder='Week' value=updatedWorkout.week maxlength="2"}}
  </div>
  <div class='workout-form'>
    {{input placeholder='Day of the Week' value=updatedWorkout.day maxlength="9"}}
  </div>
  <div class='workout-form'>
    {{input placeholder='Exercise' value=updatedWorkout.exercise maxlength="30"}}
  </div>
  <div class='workout-form'>
    {{input placeholder='Number of Sets' value=updatedWorkout.sets maxlength="5"}}
  </div>
  <div class='workout-form'>
    {{input placeholder='Number of Reps' value=updatedWorkout.reps maxlength="5"}}
  </div>
  <button class='btn btn-primary' type='submit'>Save</button>
</form>
